{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.3.8",
  "npmClient": "pnpm",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/__tests__/**"
      ],
      "message": "chore(release): publish"
    }
  }
}
